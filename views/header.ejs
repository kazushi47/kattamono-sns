<%# header %>

<div class="ht-tm-navbar bg-danger text-white navbar-dark">
  <div class="container">
    <div class="ht-tm-navbar-left">
      <!-- Navbar title -->
      <a href="/" class="text-decoration-none text-white">
        <span class="ht-tm-navbar-title">買ったものSNS</span>
      </a>
    </div>
    <div class="ht-tm-element ml-auto">
      <% if (login_email != null) { %>
        <!-- User menu -->
        <div class="btn-group">
          <a href="/profile" class="btn btn-primary">
            <h6>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
              </svg>
              <%= login_email %>
            </h6>
          </a>
          <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(72px, 38px, 0px);">
            <a class="dropdown-item" href="/profile">プロフィール</a>
            <a class="dropdown-item" href="/followlist">フォロー・フォロワーリスト</a>
            <a class="dropdown-item" href="/favorities">お気に入りの投稿</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">ログアウト</a>
          </div>
        </div>
      <% } else { %>
        <!-- Login/Join buttons -->
        <a href="/login" class="btn btn-primary">ログイン</a>
      <% } %>
    </div>
  </div>
</div>